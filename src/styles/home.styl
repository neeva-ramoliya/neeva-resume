 .home
    background-image: url('/assets/bg2.jpg')
    background-size: cover
    background-position: center center
    width: 100%
    height: 100vh
    background-repeat: no-repeat, repeat
    .intro
        width: auto
        margin: auto
        position: absolute
        right: 0
        left: 0
        bottom: 60px
        text-align: center
        color: #eef7f6
        min-width: 300px
        max-width: 500px
        padding: 10px
        .name
            font-size: 2.2rem
        .sub-intro
            font-size: 2rem
            padding: 10px 0
        .desc
            line-height: 1.2
            font-weight: 400
            font-size: 1.5rem
            margin: 8px 0

